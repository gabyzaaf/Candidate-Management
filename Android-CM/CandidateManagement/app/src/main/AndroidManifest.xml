<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fabiengamel.candidatemanagement" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Activties.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activties.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Activties.AgendaActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name=".Activties.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name=".Activties.AddActivity"
            android:label="@string/title_activity_add"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity android:name=".Activties.UpdateActivity" >
        </activity>
        <activity android:name=".Activties.MapActivity" >
        </activity>
        <activity
            android:name=".Activties.PredictSalaryActivity"
            android:label="@string/title_activity_salary"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity android:name=".Activties.SMSActivity"
            android:label="@string/title_activity_sms">
        </activity>
    </application>

</manifest>

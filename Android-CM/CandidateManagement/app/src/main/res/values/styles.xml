<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/barColor</item>
        <item name="colorPrimaryDark">@color/barColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/dialogColorText</item>
        <item name="android:background">@color/backgroundButton</item>
        <item name="colorAccent">@color/textEditable</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/textEditable</item>
        <item name="android:background">@color/barColor</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MySpinnerStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textInfo</item>
    </style>

</resources>

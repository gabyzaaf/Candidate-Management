<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom :  *"
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etNom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prenom :  *"
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etPrenom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail :  *"
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etMailAdd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mail"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N°tel :  *"
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Telephone"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioGroup
            android:id="@+id/rgSexe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexe :  *"
                android:textStyle="bold"
                android:textColor="#4899F6"
                android:gravity="center"
                />
            <RadioButton
                android:id="@+id/rbMasculin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculin "
                android:checked="false" />
            <RadioButton
                android:id="@+id/rbFeminin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Féminin"
                />
        </RadioGroup>
    </LinearLayout>
   <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Action :  *"
           android:textStyle="bold"
           android:textColor="#4899F6"
           android:gravity="center"
           />
       <Spinner
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/spActionAdd" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Année :  *"
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etYear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Année"
            android:inputType="number"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lien : "
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etLink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Lien"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="crCall : "
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etcrCall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="crCall"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NS : "
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etNs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="ns"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approche Email : "
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <RadioGroup
            android:id="@+id/rgEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio2"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rbTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                android:checked="false" />
            <RadioButton
                android:id="@+id/rbFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:layout_centerInParent="true"
        android:id="@+id/bRefresh" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/bAdd" />
</LinearLayout>
</LinearLayout>

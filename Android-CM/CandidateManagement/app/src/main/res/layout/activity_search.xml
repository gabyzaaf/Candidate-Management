<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fabiengamel.candidatemanagement.Activties.SearchActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom : "
            android:textStyle="bold"
            android:textColor="#4899F6"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/etName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rechercher"
            android:id="@+id/bSearchSingle" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvSingleCand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:maxLines = "50"
        android:scrollbars = "vertical"
        android:layout_above="@+id/bModify" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Modifier candidat"
        android:visibility="invisible"
        android:id="@+id/bModify"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/bLocateSearch"
        android:layout_toLeftOf="@+id/bLocateSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Envoyer un SMS"
        android:id="@+id/bSMS"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvSingleCand"
        android:layout_alignEnd="@+id/tvSingleCand"
        android:layout_below="@+id/tvSingleCand"
        android:layout_toRightOf="@+id/bLocateSearch"
        android:layout_toEndOf="@+id/bLocateSearch" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localiser"
        android:id="@+id/bLocateSearch"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvSingleCand" />

</RelativeLayout>

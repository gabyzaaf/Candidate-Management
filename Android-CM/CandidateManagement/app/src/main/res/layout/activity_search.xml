<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_color_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fabiengamel.candidatemanagement.Activties.SearchActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiche du candidat "
        android:textStyle="bold"
        android:textColor="@color/textTitle"
        android:gravity="center"
        android:textSize="18sp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/textView2"
        android:visibility="invisible"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <EditText
            android:id="@+id/etName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:textColorHint="@color/textEditable"
            android:textColor="@color/textEditable"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rechercher"
            android:textColor="@color/textButton"
            android:background="@color/backgroundButton"
            android:id="@+id/bSearchSingle" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvSingleCand"
        android:textColor="@color/textEditable"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:maxLines = "50"
        android:scrollbars = "vertical"
        android:layout_above="@+id/bModify"
        android:layout_below="@+id/textView2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Modifier candidat"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:visibility="invisible"
        android:id="@+id/bModify"
        android:textColor="@color/textButton"
        android:background="@color/backgroundButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/bLocateSearch"
        android:layout_toLeftOf="@+id/bLocateSearch" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Envoyer un SMS"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/bSMS"
        android:textColor="@color/textButton"
        android:background="@color/backgroundButton"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvSingleCand"
        android:layout_alignEnd="@+id/tvSingleCand"
        android:layout_below="@+id/tvSingleCand"
        android:layout_toRightOf="@+id/bLocateSearch"
        android:layout_toEndOf="@+id/bLocateSearch" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localiser"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/textButton"
        android:background="@color/backgroundButton"
        android:id="@+id/bLocateSearch"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvSingleCand" />
</RelativeLayout>

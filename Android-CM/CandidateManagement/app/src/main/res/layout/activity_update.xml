<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_gradient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Veuillez remplir les champs suivants "
        android:textStyle="bold"
        android:textColor="@color/textTitle"
        android:gravity="center"
        android:textSize="18sp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView2">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Nom *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etNomUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nom"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwvxyz"
                android:inputType="textFilter"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Prenom *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etPrenomUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Prénom"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwvxyz"
                android:inputType="textFilter"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Mail *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etMailUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Mail"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  N°tel *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etPhoneUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Telephone"
                android:inputType="number"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Code postal "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etZipcodeUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Code postal"
                android:maxLength="5"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:inputType="number"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioGroup
                android:id="@+id/rgSexeUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/radio2Update"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Sexe *"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textStyle="bold"
                    android:textColor="@color/textInfo"
                    />
                <RadioButton
                    android:id="@+id/rbMasculinUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculin "
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColor="@color/textInfo"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/rbFemininUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Féminin"
                    android:textColor="@color/textInfo"
                    />
            </RadioGroup>
        </LinearLayout>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Action *"
                android:paddingTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spActionAddUpdate"
                android:singleLine="true"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Année *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spYearsUpdate"
                android:singleLine="true"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Lien  "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etLinkUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Lien"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  crCall "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etcrCallUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="crCall"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  NS "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etNsUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="ns"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Note *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Note"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:inputType="number"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  XpNote  "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etXpNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="XpNote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  NsNote "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etNsNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="NsNOte"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  JobIdealNote "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etJobIdealNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="JINote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  PisteNote "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                android:singleLine="true"
                />
            <EditText
                android:id="@+id/etPisteNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="PSNote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  PieCOuteNote "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etPicouteNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="PCNote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  NationalityNote "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etNationalityNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="NLNote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Competences "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etCompetencesUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Competences"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  LocationNote "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etLocationNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="LCNote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  EnglishNote  "
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                />
            <EditText
                android:id="@+id/etEnglishNoteUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="ENNote"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:layout_weight="1"
                android:singleLine="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrixUpdate"
                android:text="  Prix *"
                android:textStyle="bold"
                android:textColor="@color/textInfo"
                android:visibility="invisible"
                />
            <EditText
                android:id="@+id/etPrixUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Prix"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/textEditable"
                android:inputType="number"
                android:visibility="invisible"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:textColor="@color/textButton"
                android:background="@color/backgroundButton"
                android:id="@+id/bUpdate" />
        </TableRow>
    </TableLayout>
    </RelativeLayout>
</ScrollView>

